


if [ -f "/root/f" ]; then                                                 
                                                                          
 t=$(cat f)                                                               
 tt=`date '+%s'`                                                          
tt1=$(date)                                                               
 if [ $tt -gt $t ]; then                                                  
 /etc/init.d/mia stop                                             
 /etc/init.d/mia stop                                             
 /etc/init.d/mia start                                            
  echo start again at $tt1 >>f2                                             
ttt=$(($tt-$t))                                                        
 echo time is out in $ttt  >>f2                                            
 else                                                                     
  /etc/init.d/mia stop                                            
 echo time is less then 3 >>f2                                            
 fi                                                                       
                                                                          
# echo time is out in 4 >>f2                                                
fi                                                                        
# echo time is out in 5 >>f2

